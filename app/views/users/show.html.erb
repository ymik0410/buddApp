<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container bootstrap snippets bootdey">
<div class="row">
  <div class="profile-nav col-md-3">
      <div class="panel">
          <div class="user-heading round">
              <a href="#">
                  <img src="https://bootdey.com/img/Content/avatar/avatar3.png" alt="">
              </a>
              <h1><%= @user.first_name + " "%><%= @user.last_name %></h1>
          </div>

            <div class="btn btn"><%= link_to "Edit profile", edit_user_path(current_user) %></div>

      </div>
  </div>
  <div class="profile-info col-md-9">
      <div class="panel">

      </div>
      <div class="panel">
          <div class="bio-graph-heading">
              <h1><%= @user.goal_description %></h1>
          </div>
          <div class="panel-body bio-graph-info">
              <h1></h1>
              <div class="row">
                  <div class="bio-row">
                      <p><span>First Name </span>: <%= @user.first_name %></p>
                  </div>
                  <div class="bio-row">
                      <p><span>Last Name </span>: <%= @user.last_name %></p>
                  </div>
                  <div class="bio-row">
                      <p><span>Country </span>: @user.country </p>
                  </div>
                  <div class="bio-row">
                      <p><span>Birthday</span>: @user.birthday</p>
                  </div>
                  <div class="bio-row">
                      <p><span>Joined </span>: <%= @user.created_at.strftime("%B %d, %Y")   %></p>
                  </div>
                  <div class="bio-row">
                      <p><span>Current streak </span>: <%= (Date.today.to_date - @user.created_at.to_date).to_i %></p>
                  </div>
              </div>
          </div>
      </div>
      <div>
          <div class="row">
              <div class="col-md-6">
                  <div class="panel">
                      <div class="panel-body">
                          <div class="bio-desk">
                              <h4 class="terques">Your buddy</h4>
                              <p><%= link_to current_user.buddyships.first.user1.first_name, user_path(current_user.buddyships.first.user1_id) %></p>

                              <p>Share some motivation</p>
                          </div>
                      </div>
                  </div>
              </div>
              <div class="col-md-6">
                  <div class="panel">
                      <div class="panel-body">
                          <div class="bio-desk">
                              <h4 class="terques">Your @user.goal.name </h4>
                              <p><%= @user.goal_description %></p>
                          </div>
                      </div>
                  </div>
              </div>
              <div class="col-md-6">
                  <div class="panel">
                      <div class="panel-body">
                          <div class="bio-desk">
                              <h4 class="terques">Introduction</h4>
                              <p><%= @user.introduction %></p>
                          </div>
                      </div>
                  </div>
              </div>
              <div class="col-md-6">
                  <div class="panel">
                      <div class="panel-body">
                          <div class="bio-desk">
                              <h4 class="terques">History</h4>
                              <p>Started : 15 July</p>
                              <p>Deadline : 15 August</p>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
</div>
</div>
