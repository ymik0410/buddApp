<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container bootstrap snippets bootdey">
<div class="row">
  <div class="profile-nav col-md-3">
      <div class="panel">
          <div class="user-heading round">
              <% if @user.image.attached? %>
                <%= cl_image_tag @user.image.key, width: 150, height: 150, crop: :fill, gravity: :face, radius: 20, background: '#A8DADC', border: {width: 3, color: '#FFFFFF'} %>
              <% else %>
                <%=  image_tag 'https://bootdey.com/img/Content/avatar/avatar3.png', width: 100, crop: :fill, radius: 50, gravity: :face, background: '#1D3557 ', border: {width: 10, color: '#1C6CA2'}  %>
              <% end %>


              <h1><%= @user.username %></h1>
              <div class="row">
              <div class="bio-row">
                      <p><span>First Name </span>: <%= @user.first_name %></p>
                  </div>
                   </div>
          </div>
            <% if current_user == @user %>
            <div class="btn btn-1"><%= link_to "Edit profile", edit_user_path(current_user) %></div>
            <% end %>
      </div>
  </div>
  <div class="profile-info col-md-9">
      <div class="panel">

      </div>
      <div class="panel">
          <div class="bio-graph-heading">
              <h1><%= @user.goal_description %></h1>
          </div>
          <div class="panel-body bio-graph-info">
              <h1></h1>
              <div class="row">
                  <div class="bio-row">
                      <p><span>First Name </span>: <%= @user.first_name %></p>
                  </div>
                  <div class="bio-row">
                      <p><span>Last Name </span>: <%= @user.last_name %></p>
                  </div>
                  <div class="bio-row">
                    <p><span>Country </span>:
                      <% if @user.country.present? %>
                        <%= @user.country  %>
                      <% else %>
                        <%= "Not available" %>
                      <% end %>
                    </p>
                  </div>
                  <div class="bio-row">
                    <p><span>Date of birth</span>:
                      <% if @user.date_of_birth.present? %>
                        <%= @user.date_of_birth.strftime("%d %B, %Y") %>
                      <% else %>
                        <%= "Not available" %>
                      <% end %>
                    </p>
                  </div>
                  <div class="bio-row">
                      <p><span>Joined </span>: <%= @user.created_at.strftime("%B %d, %Y")   %></p>
                  </div>
                  <div class="bio-row">
                      <p><span>Current streak </span>: <%= (Date.today.to_date - @user.created_at.to_date).to_i %></p>
                  </div>
              </div>
          </div>
      </div>
      <div>
          <div class="row">
              <div class="col-md-6">
                  <div class="panel">
                      <div class="panel-body">
                          <div class="bio-desk">
                              <h4 class="terques">Your buddy</h4>
                              <p><%= link_to @user.buddy.username, user_path(@user.buddy.id) %></p>

                              <p> <%= link_to 'Share some motivation', buddyship_path(@user.buddyships.last) %></p>
                          </div>
                      </div>
                  </div>
              </div>
              <div class="col-md-6">
                  <div class="panel">
                      <div class="panel-body">
                          <div class="bio-desk">
                              <h4 class="terques">Your @user.goal.name </h4>
                              <p><%= @user.goal_description %></p>
                          </div>
                      </div>
                  </div>
              </div>
              <div class="col-md-6">
                  <div class="panel">
                      <div class="panel-body">
                          <div class="bio-desk">
                              <h4 class="terques">Introduction</h4>
                              <p><%= @user.introduction %></p>
                          </div>
                      </div>
                  </div>
              </div>
              <div class="col-md-6">
                  <div class="panel">
                      <div class="panel-body">
                          <div class="bio-desk">
                              <h4 class="terques">History</h4>
                              <p>Started : 15 July</p>
                              <p>Deadline : 15 August</p>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
</div>
</div>
