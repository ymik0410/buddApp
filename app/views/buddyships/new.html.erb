<div class='container-buddyship mx-auto mt-5 col-md-10 mt-100'>
    <div class="header-buddyship">
        <div class="title-buddyship">We found 3 best buddymatches for you!</div>
    </div>

    <div class="row" style="justify-content: center">
        <% @same_goal_available.take(3).each do |buddy| %>
        <div class="card-buddyship col-md-3 mt-100">
            <div class="card-content">
                <div class="card-body p-0">
                    <div class="profile-buddyship p-4"> <img src="https://i.imgur.com/J6l19aF.jpg"> </div>
                    <div class="card-title buddyship-name"> <%= link_to buddy.username, user_path(current_user) %> </div>
                    <div class="card-title"> <%= buddy.country %> </div>
                    <div class="card-title"> <%= buddy.current_goal.name %> </div>
                    <div class="card-subtitle">
                        <p> <small class="text-muted"> <%= buddy.goal_description %> </small> </p>
                    </div>
                </div>
            </div>

            <div class="d-flex align-items-end btn btn-buddyship" id="buddy"><%= link_to "Choose your buddy", buddyships_path(buddy: buddy.id), method: "POST" %></div>
      </div>
     <% end %>
    </div>
</div>
        