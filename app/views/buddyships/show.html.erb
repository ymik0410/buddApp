
<div class="container-chat">
 <!--  <div class="row"> -->
  <div class="card-body">
    <div class="panel">
      <div class="chat-title">
        <% if @buddyship.user2.image.attached? %>
          <%= cl_image_tag @buddyship.user2.image.key, class: "avatar dropdown-toggle" %>
        <% elsif @buddyship.user2.photo.present? %>
          <%= image_tag @user.photo, class: "avatar dropdown-toggle" %>
        <% else %>
          <%=  image_tag 'https://bootdey.com/img/Content/avatar/avatar3.png', class: "avatar dropdown-toggle" %>
          <h5> Conversation with <%= @buddyship.user2.username %> </h5>
        <% end %>
      </div>
    </div>
  </div>

  <div id="messages" data-buddyship-id="<%= @buddyship.id %>">
    <% @buddyship.messages.each do |message| %>
      <%= render 'messages/message', message: message %>
    <% end %>
  </div>

  <%= simple_form_for [ @buddyship, @message ], remote: true do |f| %>
    <%= f.input :content, label: false, placeholder: "Say hello and send some motivation to your buddy" %>
      <%= f.submit "Send", class: "btn" %>
    <% end %>

  <!-- </div> -->
</div>






